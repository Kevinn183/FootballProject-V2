<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shield_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="320dp"
            app:srcCompat="@drawable/alaves" />

        <TextView
            android:id="@+id/name_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="31dp"
            android:text="D.ALAVES."
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/stadium_team"
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:layout_marginStart="185dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/mendizorroza" />

        <TextView
            android:id="@+id/name_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="60dp"
            android:text="Mendizorroza" />

        <ImageView
            android:id="@+id/liga_tro"
            android:layout_width="111dp"
            android:layout_height="68dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/trofeoliga" />

        <TextView
            android:id="@+id/num_tro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="355dp"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/posicion_tabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="365dp"
            android:layout_marginTop="5dp"
            android:text="15ยบ"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="365dp"
            android:layout_marginTop="25dp"
            android:text="12pts"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>